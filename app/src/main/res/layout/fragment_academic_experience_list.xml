<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.inin.injob.cv.AcademicExperienceList">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">


                <TextView
                    android:id="@+id/person_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/person_name"
                    android:layout_centerHorizontal="true"
                    android:text="Aquí puedes colocar tu experienca académica, recuerda que para validar tus conocimientos puedes subir una foto de tu certificación o título"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/person_age"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccentLight" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/person_age">

                    <Button
                        android:id="@+id/addAcademicBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Añadir nueva experiencia"
                        android:textSize="12sp"
                        android:theme="@style/PrimaryFlatButton" />

                    <!--<Button-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Ver Detalles"-->
                    <!--android:theme="@style/PrimaryFlatButton" />-->
                </LinearLayout>

            </RelativeLayout>




        </android.support.v7.widget.CardView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv"
            android:layout_marginTop="20dp"
            android:scrollbars="vertical"
            />


    </RelativeLayout>



</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_marginTop="24dp"
                android:text="Analista de importaciones"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/person_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="36dp"
                android:text="Realizar las funciones administrativas inherentes a la función de importación y exportación de mercancías, además de otras tareas relacionadas con la función de Logística, Tráfico y Transportes."
                android:textAlignment="center" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@color/colorLight"
                android:layout_below="@+id/person_age"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/details"
                android:textColor="@android:color/white"
                android:textColorLink="@android:color/white" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>
